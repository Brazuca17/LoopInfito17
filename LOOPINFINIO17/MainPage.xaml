<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOOPINFINIO17.MainPage"
             xmlns:ff="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             Shell.NavBarIsVisible="False">

        <Grid>
        <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Pulo"/>
        </Grid.GestureRecognizers>

        <HorizontalStackLayout x:Name="HSLayer1">
            
            <Image Source ="ceu.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="ceu.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="ceu.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>

        </HorizontalStackLayout>

        <HorizontalStackLayout x:Name="HSLayer2">

            <Image Source ="fumaca.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="fumaca.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="fumaca.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            
        </HorizontalStackLayout>
    
    
        <HorizontalStackLayout x:Name="HSLayer3">

            <Image Source ="arvore.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="arvore.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            <Image Source ="arvore.png"
            VerticalOptions="Fill"
            Aspect="AspectFill"/>
            
        </HorizontalStackLayout>

        <HorizontalStackLayout  x:Name="HSLayerChao"
                                VerticalOptions="End">

            <Image  Source="chao.png"
                    Aspect="Fill"
                    HorizontalOptions="Fill"
                    HeightRequest="125"/>
            <Image  Source="chao.png"
                    Aspect="Fill"
                    HorizontalOptions="Fill"
                    HeightRequest="125"/>
            <Image  Source="chao.png"
                    Aspect="Fill"
                    HorizontalOptions="Fill"
                    HeightRequest="125"/>
        </HorizontalStackLayout>


            <ff:CachedImageView 
                CacheType ="All"
                CacheDuration="365"
                x:Name="Imgplayer"
                Source="player01.png"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Margin="50,0,0,110"
                HeightRequest="150"
                WidthRequest="150"
                Aspect="Fill"/>

        <Image  Source="neycaido.png"
                x:Name="imginimigo1"
                Margin="0,0,0,110"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                HeightRequest="125"/>

        <Image  Source="fantasma.png"
                x:Name="imginimigo2"
                Margin="0,0,0,110"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                HeightRequest="125"/>
        
        <Image  Source="boletosemfundo.png"
                x:Name="imginimigo3"
                Margin="0,0,0,110"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                HeightRequest="125"/>
        
        <Image  Source="carteiradetrabalho.png"
                x:Name="imginimigo4"
                Margin="0,0,0,110"
                Aspect="Fill"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                HeightRequest="125"/>

        
    </Grid>

</ContentPage>
